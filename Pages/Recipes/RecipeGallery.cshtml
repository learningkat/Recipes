@page
@model RecipesVersion2.Pages.Recipes.IndexModel

@{
    ViewData["Title"] = "Index";
}
@section styles{
    <link rel="Stylesheet" href="@Href("~/css/RecipeGalleryStyle.css")" />
}

@*<h1>Recipe Gallery</h1>


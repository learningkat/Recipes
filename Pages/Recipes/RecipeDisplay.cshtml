@page
@model RecipesVersion2.Pages.Recipes.RecipeDisplayModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.RecipeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.RecipeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.DateAdded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.DateAdded)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Cuisine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Cuisine)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Course)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Course)
        </dd>
    </dl>
    <h3>Ingredients</h3>
    @foreach (var item in Model.Recipe.RecipeIngredients)
    {
        <p>
            @Html.DisplayFor(modelItem => item.Quantity)
            @Html.DisplayFor(modelItem => item.Unit.UnitName)
            @Html.DisplayFor(modelItem => item.RecipeIngredientName.IngredientName)
        </p>
    }
    <h3>Instructions</h3>
        <ol>
    @foreach (var item in Model.Recipe.Instruction)
    {
            <li>
                @Html.DisplayFor(modelItem => item.InstructionText)
            </li>
    }
        </ol>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Recipe.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

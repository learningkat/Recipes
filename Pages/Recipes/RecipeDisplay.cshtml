<hr class="rounded">
<div id="RecipeDisplay" class="row">
    <div class="col-4">
        <h3>Ingredients</h3>
        <ul>
            @foreach (var item in Model.Recipe.RecipeIngredients)
            {
                <li>
                    @Html.DisplayFor(modelItem => item.Quantity)
                    @Html.DisplayFor(modelItem => item.Unit.UnitName)
                    @Html.DisplayFor(modelItem => item.RecipeIngredientName.IngredientName)
                </li>
            }
        </ul>
    </div>
    <div class="col-8">
        <h3>Instructions</h3>
        <ul>
            @foreach (var item in Model.Recipe.Instruction)
            {
                <li>
                    @Html.DisplayFor(modelItem => item.InstructionText)
                </li>
            }
        </ul>
    </div>
</div>

